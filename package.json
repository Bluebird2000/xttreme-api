{
  "name": "xttreme-api",
  "description": "Server side app that provided xttreme inventory users with data",
  "version": "1.0.0",
  "private": true,
  "author": "Bluebird2000",
  "license": "ISC",
  "scripts": {
    "dev": "NODE_ENV=dev node ./bin/www",
    "grunt": "grunt",
    "start": "node ./bin/www",
    "test": "NODE_ENV=test ./node_modules/.bin/nyc mocha -r ts-node/register src/test/**/*.ts --timeout 30000 --exit",
    "coverage": "./node_modules/.bin/nyc report",
    "build": "grunt prod",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bluebird2000/xttreme-api.git"
  },
  "engines": {
    "node": "10.16.3"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/test"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "lines": 90
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "@types/elasticsearch": "^5.0.32",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/multer": "^1.3.7",
    "@types/nodemailer": "^4.6.2",
    "axios": "^0.19.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.2",
    "chai-http": "^4.2.1",
    "chalk": "^2.4.1",
    "class-validator": "^0.9.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-jwt": "^5.3.1",
    "express-mongo-db": "^2.0.4",
    "express-validator": "^5.3.1",
    "faker": "^4.1.0",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^9.0.0",
    "kaop-ts": "^4.1.1",
    "method-override": "^2.3.6",
    "mongoose": "^5.0.0",
    "mongoose-encryption": "^2.0.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "node-cron": "^1.2.1",
    "nodemailer": "^4.6.7",
    "nyc": "^14.1.1",
    "paystack": "^2.0.1",
    "pug": "^2.0.4",
    "q": "^1.4.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "swagger-ui-express": "^3.0.10",
    "uuid": "^3.3.2",
    "validator.ts": "^0.2.2",
    "xls-to-json-lc": "^0.3.4",
    "xlsx-to-json-lc": "^0.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/cookie-parser": "^1.3.30",
    "@types/errorhandler": "0.0.30",
    "@types/es6-promise": "^3.3.0",
    "@types/method-override": "0.0.29",
    "@types/mocha": "^2.2.32",
    "@types/mongodb": "^2.2.23",
    "@types/mongoose": "^4.7.39",
    "@types/morgan": "^1.7.32",
    "chai": "^3.5.0",
    "cross-env": "^5.2.0",
    "grunt": "^1.0.4",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-ts": "^6.0.0-beta.22",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^1.18.3",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "typescript": "^2.9.2"
  }
}
